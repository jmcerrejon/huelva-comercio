<Alloy>
    <Window id="wAffiliateDetail" class="v_container" tabBarHidden="true">
        <Require id="reqNavbar" src="/partials/navbar" title="$.args.data.name" leftIcon="text-2xl text-white fas fa-chevron-left" onLogin="close"></Require>

        <ScrollView class="scrollView bg-white">
            <View id="vwShow" class="v_container">
                <View id="vw_logo" class="v_container">
                    <View class="logoContainer" height="Ti.UI.SIZE" width="Ti.UI.SIZE">
                        <ImageView id="logoShow" class="logoImage" module="av.imageview" right="5"></ImageView>
                    </View>

                    <View class="separator-half-min no-touch-enable"></View>
                </View>

                <View class="w-full h-auto vertical mt-2 mb-6">
                    <Label id="lb_category" class="text-center main-color no-touch-enable w-full" top="5"> - </Label>
                </View>

                <View id="vw_address" class="v_container" onClick="doAction">
                    <Label class="fa icons no-touch-enable" text="\uf5a0"/>
                    <Label id="lb_address" class="text-center main-color no-touch-enable w-full" top="5"> - </Label>
                    <View class="separator-min no-touch-enable"></View>
                </View>

                <View id="vw_phones" class="v_container" onClick="doAction">
                    <Label class="fa icons no-touch-enable" text="\uf095"/>
                    <Label id="lb_phones" class="text-center main-color no-touch-enable w-full" top="5"> - </Label>
                    <View class="separator-min no-touch-enable"></View>
                </View>

                <View id="vw_emails" class="v_container" onClick="doAction">
                    <Label class="headerSection no-touch-enable">E-MAIL</Label>
                    <Label id="lb_emails" class="text-center main-color no-touch-enable w-full" top="5"> - </Label>
                    <View class="separator-min no-touch-enable"></View>
                </View>

                <View id="vw_websites" class="v_container" onClick="doAction">
                    <Label class="headerSection no-touch-enable">WEB</Label>
                    <Label id="lb_websites" class="text-center main-color no-touch-enable w-full" top="5"> - </Label>
                    <View class="separator-min no-touch-enable"></View>
                </View>

            </View>
        </ScrollView>
    </Window>
</Alloy>