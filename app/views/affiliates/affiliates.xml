<Alloy>
    <View class="w-full h-full vertical">

        <!-- Navigation Bar buttons -->

        <Require id="reqNavbar" src="/partials/navbar" title="Asociados" rightIcon="text-2xl text-white lni lni-search-alt" onClick="doSearchAffiliate"></Require>

        <ListView id="lView" class="w-11/12 vertical bg-white -mt-5" onItemclick="doOpenAffiliates" defaultItemTemplate="defaultTemplate">
            <RefreshControl id="refreshListView" onRefreshstart="reset"/>

            <Widget id="is" src="nl.fokkezb.infiniteScroll" onEnd="myLoaderAssociations"/>

            <Templates>
                <ItemTemplate name="defaultTemplate" height="80">
                    <View class="horizontal w-full">
                        <View width="20%" class="logoContainer h-11/12">
                            <ImageView bindId="logo" class="logoImage" module="av.imageview" contentMode="Alloy.Globals.CONTENT_MODE_FIT"></ImageView>
                        </View>

                        <View width="79%" class="vertical">
                            <Label bindId="title" class="lni-16 ml-1 text-lightBlue-600 h-10"/>
                        </View>
                    </View>
                </ItemTemplate>
            </Templates>

            <ListSection dataCollection="affiliates" dataTransform="doTransform">
                <ListItem accessoryType="Ti.UI.LIST_ACCESSORY_TYPE_DISCLOSURE" itemId="{id}" logo:image="{logoUrl}" title:text="{name}" afiliate:text="{phone1}"/>
            </ListSection>
        </ListView>
    </View>
</Alloy>