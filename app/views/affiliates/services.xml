<Alloy>
    <Window clas="w-full h-full vertical" navBarHidden="true" tabBarHidden="true">
        <Require id="reqNavbar" src="/partials/navbar" title="Servicios" leftIcon="text-2xl text-white fas fa-chevron-left" onLogin="close"></Require>

        <ScrollView class="vertical w-11/12 h-auto bg-white" top="92">
            <View class="vertical w-11/12 h-auto mt-4" dataCollection="services">
                <View class="vertical w-full h-auto" id="vwContainer" itemLink="{link}" onClick="doOpenURL">
                    <ImageView class="no-touch-enable" image="{image}" defaultImage="/images/logo.png"></ImageView>
                    <Label class="mt-10 text-center no-touch-enable" text="{title}"></Label>
                    <Label class="m-3 h-auto text-justify no-touch-enable" text="{content}"></Label>
                </View>
            </View>
        </ScrollView>
    </Window>
</Alloy>