<Alloy>
    <ScrollView id="scrollView">
        <View class="w-full h-full vertical">

            <!-- Navigation Bar buttons -->

            <Require id="reqNavbar" src="/partials/navbar" title="Contacto"></Require>

            <!-- Body -->

            <View id="vwBody" class="w-full h-full bg-white vertical">
                <View class="mx-8 vertical">
                    <Label class="w-full mt-2 ml-1 text-sm text-left text-blue-900">Correo electrónico</Label>

                    <TextField id="user" class="w-screen h-10 pl-2 mt-1 text-base text-gray-800 border-blue-500 rounded-xl bg-gray-50" returnKeyType="Ti.UI.RETURNKEY_NEXT" keyboardType="Ti.UI.KEYBOARD_TYPE_EMAIL" hintText="Email" hintTextColor="#CBD6E9" />

                    <Label class="w-full mt-4 ml-1 text-sm text-left text-blue-900">Mensaje</Label>

                    <TextArea id="content" class="w-screen h-20 pl-2 mt-1 mb-2 text-base text-gray-800 border-blue-500 rounded-xl bg-gray-50" hintText="Escribe aquí y ponte en contacto con nosotros" hintTextColor="#CBD6E9" />

                    <Require src="partials/button" text="Enviar" onClick="sendEmail"></Require>
                </View>

                <View class="h-10 mx-8 mt-4 horizontal">
                    <View class="w-1/2 mt-2" onClick="openFacebook">
                        <View id="vwFacebook" class="horizontal no-touch-enable">
                            <Label class="text-blue-500 fab fa-facebook no-touch-enable"></Label>

                            <Label class="ml-2 text-blue-500 no-touch-enable">Facebook</Label>
                        </View>
                    </View>

                    <View class="w-1/2 mt-2" onClick="openTwitter">
                        <View id="vwTwitter" class="horizontal no-touch-enable">
                            <Label class="text-blue-400 fab fa-twitter no-touch-enable"></Label>

                            <Label class="ml-2 text-blue-500 no-touch-enable">Twitter</Label>
                        </View>
                    </View>
                </View>

                <View class="h-10 mx-8 mt-4 horizontal">
                    <View class="w-1/2 mt-2" onClick="call">
                        <View id="vwFacebook" class="horizontal no-touch-enable">
                            <Label class="text-blue-500 fa fa-phone no-touch-enable"></Label>

                            <Label class="ml-2 text-blue-500 no-touch-enable">65754224524</Label>
                        </View>
                    </View>

                    <View class="w-1/2 mt-2">
                        <View id="vwTwitter" class="horizontal no-touch-enable">
                            <Label class="text-blue-5 00 fa fa-mail-bulk no-touch-enable"></Label>

                            <Label class="ml-2 text-blue-500 no-touch-enable">daniel@foe.es</Label>
                        </View>
                    </View>
                </View>

            </View>
        </View>
    </ScrollView>
</Alloy>
