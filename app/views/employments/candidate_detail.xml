<Alloy>
    <Window id="candidateDetail">
        <Require id="navbar" src="/partials/_navbar" onClick="actions"></Require>
        <ScrollView id="svCandidate" class="scrollView" onClick="doLostFocus">
            <Require src="/partials/_textfield" class="required textField keyboard-mail mailIcon" id="email" onClickLblRight="sendEmail" enabled="false" hintText="Email" hintTextTitle="Email" onNext="next" next="full_name"></Require>

            <Require src="/partials/_textfield" class="required textField" id="full_name" enabled="false" hintText="Nombre completo" hintTextTitle="Nombre completo" onNext="next" onPrevious="previous" next="occupation" previous="email"></Require>

            <Require src="/partials/_textfield" class="required textField" id="occupation" enabled="false" hintText="Profesión" onChange="doAutocomplete" hintTextTitle="Profesión" onNext="next" onPrevious="previous" next="phone" previous="full_name"></Require>

            <ListView id="listProfessionsView" class="listProfessionsView" defaultItemTemplate="default">
                <Templates>
                    <ItemTemplate name="default" class="v_container" onClick="doRefreshProfessionsTextField">
                        <Label bindId="title" class="listItemView font14Light"/>
                    </ItemTemplate>
                </Templates>

                <ListSection dataCollection="professions">
                    <ListItem title:text="  { value }" />
                </ListSection>
            </ListView>

            <Require src="/partials/_textfield" class="required keyboard-numeric textField phoneIcon" id="phone" onClickLblRight="callPhone" enabled="false" hintText="Teléfono de contacto" hintTextTitle="Teléfono de contacto" onPrevious="previous" previous="occupation"></Require>

            <Require src="/partials/_textfield" class="required textField" id="birth_date" enabled="false" isDate="true" hintText="Fecha de nacimiento" hintTextTitle="Fecha de nacimiento"></Require>

            <Require src="/partials/_textarea" class="textField" id="description" touchEnabled="false" hintText="Coméntanos algo sobre tí" hintTextTitle="Coméntanos algo sobre tí"></Require>

            <Require src="/partials/_textfield" class="textField" id="sector" enabled="false" noTrad="true" hintText="Sector al que va dirigido" hintTextTitle="Sector al que va dirigido"></Require>

            <Require src="/partials/_checkbox" id="drive_license" touchEnabled="false" left="0" text="Carnet de conducir"></Require>

            <Require src="/partials/_checkbox" id="food_license" touchEnabled="false" left="0" text="Carnet manipulador de alimentos"></Require>

            <Require src="/partials/_checkbox" id="other_languages" touchEnabled="false" left="0" text="¿Puede mantener una conversación en otro idioma?"></Require>

            <View class="separator-min"></View>

            <View id="vAddPdf" class="v_container">
                <Button id="btnAddPdf" class="btn" onClick="handlePdfDocument" title="ADJUNTAR CV"></Button>

                <Label id="lbPdfMax" top="5" onClick="viewCurrentPdf" class="font12Light" color="Alloy.CFG.COLORS.dark_gray">Pdf con tamaño máximo de 1 Mb</Label>
            </View>

            <View id="vPrivacyPolicy" class="btnContainer v_container" height="0">
                <Require src="/partials/_checkbox" id="accept_privacy" left="0" text="Acepto los Términos, Condiciones de uso y Política de Privacidad de la aplicación Huelva Comercio."></Require>
            </View>

            <View id="vDelete" class="btnContainer v_container">
                <Button id="delCandidate" class="btn-alert" title="ELIMINAR" onClick="deleteCandidate" />
            </View>

            <View id="vSubmit" class="btnContainer v_container">
                <Button class="btn" title="GUARDAR" onClick="submit" />
            </View>

            <View class="separator-half-min"></View>

            <Label class="font12Light v_container text-center" onClick="doReadPrivacy">
                <AttributedString class="font12Light privacyAttributtedString">
					Leer los Términos, Condiciones de uso y Política de Privacidad de la aplicación Huelva Comercio.
                </AttributedString>
            </Label>

            <View class="separator-medium"></View>
        </ScrollView>
    </Window>
</Alloy>