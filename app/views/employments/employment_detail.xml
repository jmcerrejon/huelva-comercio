<Alloy>
	<Window id="employmentDetail">
		<Require id="navbar" src="/partials/_navbar" onClick="actions"></Require>
		<ScrollView class="scrollView" onClick="doLostFocus">
			<Require src="/partials/_textfield" class="required textField" id="title" enabled="false" hintText="Servicio a requerir" hintTextTitle="Servicio a requerir" onNext="next" next="contact"></Require>
			<Require src="/partials/_textfield" class="required textField copyIcon" onClickLblRight="copy2Clipboard" id="contact" enabled="false" hintText="Contacto" hintTextTitle="Contacto (mail, tfno. u otros medios)" onNext="next" onPrevious="previous" previous="title" next="content"></Require>
			<Require src="/partials/_textarea" class="required textField" id="content" enabled="false" hintText="Detalle del servicio" hintTextTitle="Detalle del servicio" onNext="next" onPrevious="previous" previous="contact" next="requirements"></Require>
			<Require src="/partials/_textarea" class="required textField" id="requirements" enabled="false" hintText="Requisitos" hintTextTitle="Requisitos" onNext="next" onPrevious="previous" previous="content" next="sector"></Require>
			<Require src="/partials/_textfield" class="textField" id="sector" enabled="false" hintText="Sector al que va dirigido" hintTextTitle="Sector al que va dirigido" noTrad="true"></Require>
			<View class="separator-min"></View>
			<View id="vDelete" class="btnContainer v_container">
				<Button id="delEmployment" class="btn-alert" title="ELIMINAR" onClick="deleteEmployment" />
			</View>
			<View id="vSubmit" class="btnContainer v_container">
				<Button class="btn" title="GUARDAR" onClick="submitEmployment" />
			</View>
			<View class="separator-medium"></View>
		</ScrollView>
	</Window>
</Alloy>